<h1></h1>

<div class="subheader">
  <h2><%= @course.name %></h2>
  <a href="/courses/<%= @course.id %>/overview">OVERVIEW</a>
  <button>BACK</button>
</div>

<div class="datenav">
  <form action="/courses/<%= @course.id %>">
  <input type="hidden" name="date_offset" value="<%= @prevButtonVal %>">
  <input type="submit" value="PREVIOUS">
  </form>
  <span class="date"><%= @date %></span>
  <form action="/courses/<%= @course.id %>">
  <input type="hidden" name="date_offset" value="<%= @nextButtonVal %>">
  <input type="submit" value="NEXT">
  </form>
</div>


<form action="/attendances/edit"></form>
  <table>
    <thead>
      <td>NAME</td>
      <td>STATUS</td>
    </thead>
    <tbody>
      <% @students.each do | student | %>
        <tr>
        <% # puts( student.attendance.status )%>
          <td><a href="/students/<%= student.id%>" title=""><%= student.name %></a></td>
          <td>
            <select name="status">
              <!-- < % = if ( student.attendance.status == "present" ) then print("selected") end % >-->
              <option value="present">PRESENT</option>
              <option value="late">LATE</option>
              <option value="excused">EXCUSED</option>
              <option value="unexcused">UNEXCUSED</option>
            </select>

          </td>
          <td>
            <% @attendances_by_message_date.each do |attendance_record| %>
              <% if attendance_record.message != nil && attendance_record.user_id == student.id %>
                <%= student.name + ":  " + attendance_record.message %>
              <%end%>
            <%end%>
          </td>
        <tr>
      <% end %>
    </tbody>
  </table>
  <input type="submit" value="SUBMIT ATTENDANCE" >
</form>

